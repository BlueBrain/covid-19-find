{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FIND simulator HTTP request",
  "required": [
    "countryCode",
    "population",
    "activePopulationProportion",
    "hospitalBeds",
    "hospitalStaffPerBed",
    "workingOutsideHomeProportion",
    "urbanPopulationProportion",
    "over64Proportion",
    "belowPovertyLineProportion",
    "scenarios"
  ],
  "type": "object",
  "properties": {
    "countryCode": {
      "type": "string",
      "minLength": 2,
      "maxLength": 2
    },
    "population": {
      "type": "integer",
      "minimum": 0
    },
    "activePopulationProportion": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "hospitalBeds": {
      "type": "integer",
      "minimum": 0
    },
    "hospitalStaffPerBed": {
      "type": "number",
      "minimum": 0
    },
    "workingOutsideHomeProportion": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "urbanPopulationProportion": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "over64Proportion": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "belowPovertyLineProportion": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "object",
        "required": ["phases"],
        "properties": {
          "phases": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "importedInfectionsPerDay",
                "trigger",
                "triggerType",
                "triggerCondition",
                "severity",
                "proportionOfContactsTraced",
                "numTestsMitigation",
                "typeTestsMitigation",
                "specificity",
                "sensitivity",
                "testSymptomaticOnly",
                "numTestsCare",
                "typeTestsCare",
                "requiredDxTests",
                "resultsPeriod",
                "proportionAsymptomaticTested",
                "testingStrategy"
              ],
              "properties": {
                "testingStrategy": {
                  "type": "string",
                  "enum": [
                    "all symptomatic",
                    "special groups with symptoms",
                    "open public testing"
                  ]
                },
                "proportionAsymptomaticTested": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "resultsPeriod": {
                  "type": "number"
                },
                "importedInfectionsPerDay": {
                  "type": "number"
                },
                "trigger": {
                  "type": "string"
                },
                "triggerType": {
                  "type": "string",
                  "enum": ["date"]
                },
                "triggerCondition": {
                  "type": "string",
                  "enum": ["<", "=", ">="]
                },
                "severity": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "proportionOfContactsTraced": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "numTestsMitigation": {
                  "type": "number",
                  "minimum": 0
                },
                "typeTestsMitigation": {
                  "type": "string",
                  "enum": ["PCR", "RDT"]
                },
                "specificity": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "sensitivity": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "testSymptomaticOnly": {
                  "type": "boolean"
                },
                "numTestsCare": {
                  "type": "number",
                  "minimum": 0
                },
                "typeTestsCare": {
                  "type": "string",
                  "enum": ["PCR", "RDT"]
                },
                "requiredDxTests": {
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          }
        }
      }
    }
  }
}
