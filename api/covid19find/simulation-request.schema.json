{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FIND simulator HTTP request",
  "required": [
    "countryCode",
    "population",
    "incomeCategory",
    "activePopulationProportion",
    "hospitalStaffPerBed",
    "urbanPopulationProportion",
    "over64Proportion",
    "scenarios"
  ],
  "type": "object",
  "properties": {
    "countryCode": {
      "type": "string",
      "minLength": 2,
      "maxLength": 2
    },
    "population": {
      "type": "integer",
      "minimum": 0
    },
    "activePopulationProportion": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "incomeCategory": {
      "type": "string",
      "enum": [
        "Low income",
        "Lower middle income",
        "Upper middle income",
        "High income"
      ]
    },
    "hospitalStaffPerBed": {
      "type": "number",
      "minimum": 0
    },
    "urbanPopulationProportion": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "over64Proportion": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
 
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "phases"
        ],
        "properties": {
          "phases": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "importedInfectionsPerDay",
                "trigger",
                "triggerType",
                "triggerCondition",
                "severity",
                "proportionOfContactsTraced",
                "numTestsMitigation",
                "typeTestsMitigation",
                "specificity",
                "sensitivity",
                "testingStrategy",
                "numTestsCare",
                "typeTestsCare",
                "requiredDxTests",
                "resultsPeriod",
                "fatalityReductionRecent"
              ],
              "properties": {
                "importedInfectionsPerDay": {
                  "type": "string",
                  "enum": [
                    "highly effective",
                    "fairly effective",
                    "not effective"
                  ]
                },
                "trigger": {
                  "type": [
                    "string",
                    "number"
                  ]
                },
                "triggerType": {
                  "type": "string",
                  "enum": [
                    "date",
                    "deaths",
                    "cases",
                    "cases per million",
                    "increase cases",
                    "increase deaths",
                    "positives"
                  ]
                },
                "triggerCondition": {
                  "type": "string",
                  "enum": [
                    "<",
                    "=",
                    ">="
                  ]
                },
                "severity": {
                  "type": "string",
                  "enum": [
                    "major tightening",
                    "mild tightening",
                    "no change",
                    "mild loosening",
                    "major loosening",
                    "reverse last change"
                  ]
                },
                "proportionOfContactsTraced": {
                  "type": "string",
                  "enum": [
                    "highly effective",
                    "fairly effective",
                    "none"
                  ]
                },
                "numTestsMitigation": {
                  "type": "number",
                  "minimum": 0
                },
                "typeTestsMitigation": {
                  "type": "string",
                  "enum": [
                    "PCR",
                    "RDT"
                  ]
                },
                "specificity": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "sensitivity": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "testingStrategy": {
                  "type": "string",
                  "enum": [
                    "symptomatic first",
                    "high contact groups first",
                    "open public testing",
                    "no testing"
                  ]
                },
                "numTestsCare": {
                  "type": "number",
                  "minimum": 0
                },
                "typeTestsCare": {
                  "type": "string",
                  "enum": [
                    "PCR",
                    "RDT"
                  ]
                },
                "requiredDxTests": {
                  "type": "number",
                  "minimum": 0
                },
                "resultsPeriod": {
                  "type": "integer"
                },
                "fatalityReductionRecent": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            }
          }
        }
      }
    }
  }
}
